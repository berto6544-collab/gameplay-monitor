{
  "manifest_version": 3,
  "name": "Cheat Detector Overlay",
  "version": "1.0",
  "permissions": ["activeTab", "storage", "scripting"],
  "content_scripts": [
    {
      "matches": ["https://youtube.com/*","https://www.youtube.com/*","https://twitch.tv/*","https://kick.com/*","https://rumble.com/*","https://tiktok.com/*"],
      "js": ["content.js"]
    }
  ]
}